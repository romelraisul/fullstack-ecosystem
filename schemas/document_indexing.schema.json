{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DocumentIndexingSchema",
  "type": "object",
  "properties": {
    "document_id": {
      "type": "string",
      "description": "Unique identifier for the document"
    },
    "title": {
      "type": "string",
      "description": "Title of the document"
    },
    "content": {
      "type": "string",
      "description": "Textual content of the document"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" },
        "file_type": { "type": "string", "enum": ["pdf", "docx", "txt", "gdoc"] },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["file_type"]
    },
    "embedding": {
      "type": "array",
      "items": { "type": "number" },
      "description": "Vector embedding generated by Ollama"
    }
  },
  "required": ["document_id", "content", "metadata"]
}

{
    "title": "Route Detail",
    "uid": "route-detail",
    "version": 1,
    "templating": {
        "list": [
            {
                "type": "query",
                "name": "method",
                "datasource": "Prometheus",
                "query": "label_values(app_requests_total_by_route, method)",
                "includeAll": true,
                "multi": true
            },
            {
                "type": "query",
                "name": "route",
                "datasource": "Prometheus",
                "query": "label_values(app_requests_total_by_route, route)",
                "includeAll": true,
                "multi": true
            }
        ]
    },
    "panels": [
        {
            "title": "Requests (5m)",
            "type": "timeseries",
            "targets": [
                {
                    "expr": "sum by (method, route) (rate(app_requests_total_by_route{method=~\"$method\",route=~\"$route\"}[5m]))"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "req/s"
                }
            },
            "gridPos": {
                "x": 0,
                "y": 0,
                "w": 24,
                "h": 8
            }
        },
        {
            "title": "Error rate (5m)",
            "type": "timeseries",
            "targets": [
                {
                    "expr": "sum by (method, route) (rate(app_requests_total_by_route{status=~\"5..\",method=~\"$method\",route=~\"$route\"}[5m]))"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "req/s"
                }
            },
            "gridPos": {
                "x": 0,
                "y": 8,
                "w": 24,
                "h": 8
            }
        },
        {
            "title": "Latency (P95/P99)",
            "type": "timeseries",
            "targets": [
                {
                    "expr": "histogram_quantile(0.95, sum by (le, method, route) (rate(app_request_duration_seconds_by_route_bucket{method=~\"$method\",route=~\"$route\"}[5m])))",
                    "legendFormat": "p95 {{method}} {{route}}"
                },
                {
                    "expr": "histogram_quantile(0.99, sum by (le, method, route) (rate(app_request_duration_seconds_by_route_bucket{method=~\"$method\",route=~\"$route\"}[5m])))",
                    "legendFormat": "p99 {{method}} {{route}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "s"
                }
            },
            "gridPos": {
                "x": 0,
                "y": 16,
                "w": 24,
                "h": 8
            }
        },
        {
            "title": "Top routes (by requests, 5m)",
            "type": "table",
            "targets": [
                {
                    "expr": "topk(10, sum by (method, route) (rate(app_requests_total_by_route[5m])))",
                    "instant": true
                }
            ],
            "gridPos": {
                "x": 0,
                "y": 24,
                "w": 24,
                "h": 8
            }
        }
    ]
}

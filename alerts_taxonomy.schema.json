{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Alerts Taxonomy",
    "type": "object",
    "required": [
        "schema_version",
        "alerts"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "schema_version": {
            "type": "string"
        },
        "last_updated": {
            "type": [
                "string",
                "null"
            ],
            "format": "date-time"
        },
        "alerts": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "alert",
                    "group",
                    "severity",
                    "description"
                ],
                "properties": {
                    "alert": {
                        "type": "string"
                    },
                    "group": {
                        "type": "string"
                    },
                    "severity": {
                        "type": "string",
                        "enum": [
                            "info",
                            "warning",
                            "critical"
                        ]
                    },
                    "slo": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "scope": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "enum": [
                            "service",
                            "system",
                            "multi-service",
                            "dimension",
                            "route",
                            "agent",
                            "fleet",
                            null
                        ]
                    },
                    "category": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "description": {
                        "type": "string"
                    },
                    "expr_summary": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "for": {
                        "type": "string"
                    },
                    "windows": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "runbook": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "labels": {
                        "type": "object",
                        "additionalProperties": {
                            "type": [
                                "string",
                                "number",
                                "boolean"
                            ]
                        }
                    },
                    "deprecated": {
                        "type": [
                            "boolean",
                            "null"
                        ]
                    }
                },
                "additionalProperties": true
            }
        }
    },
    "additionalProperties": false
}

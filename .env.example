# Copy this file to .env and set your secrets / local overrides.
# Used by docker-compose.yml for the prometheus-msteams bridge and benchmarking utilities.

TEAMS_WEBHOOK_URL=

# ---- Metrics / Benchmark Tooling ----
# Toggle metrics cache (0 = enabled, 1 = disabled)
DISABLE_METRIC_CACHE=0

# Optional explicit commit hash override for local benchmark runs
BENCH_COMMIT=

# Directory where benchmark JSON outputs are written
BENCH_ARTIFACT_DIR=artifacts

# Minimum acceptable batch speedup for local gating / docs (CI may set separately)
BENCH_MIN_SPEEDUP=1.05

# Rolling window for aggregation sparkline smoothing
BENCH_ROLLING_WINDOW=5

# --- Multi-Agent Backend Configuration ---
ADV_BACKEND_HOST=0.0.0.0
ADV_BACKEND_PORT=8011
ADV_BACKEND_RELOAD=false
ADV_BACKEND_LOG_LEVEL=info
AGENTS_CONFIG_DIR=./fullstack-ecosystem/config

# Database
DB_PATH=./fullstack-ecosystem/data/platform.db

# Logging
LOG_FORMAT=json
LOG_LEVEL=INFO

# Security / Auth (example only - change for production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=enterprise2024
JWT_SECRET=change_me_in_prod
JWT_ALGO=HS256
TOKEN_EXPIRE_SECONDS=3600

# Observability (future placeholders)
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=fullstack-ecosystem-api
